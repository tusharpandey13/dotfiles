module-margin-left = 5
module-margin-right = 5

font-0 = Open Sans:pixelsize=12.5;2
font-1 = SauceCodePro Nerd Font:pixelsize=17;3
font-2 = Open Sans:pixelsize=12.5:weight=bold;2


