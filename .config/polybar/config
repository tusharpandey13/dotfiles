[colors]
background = #af00171F
;background = #000
background-alt = #0e1416
foreground = ${xrdb:color7:#222}

foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/base]
;monitor = ${env:MONITOR:HDMI-1}
bottom = true
width = 100%
height = 35
;offset-x = 2
;offset-y = 1%
radius = 0.0
fixed-center = true 

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 35
line-color = #f00

border-size = 0
border-top-size = 1
border-color = #11ffffff

padding-left = 0
